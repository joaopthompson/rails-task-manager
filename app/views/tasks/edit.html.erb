<h1>Edit task:</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>

<a><%= link_to "Back to task list", tasks_path %></a>
<a><%= link_to "Delete task", task_path(@task),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this task?" } %></a>
